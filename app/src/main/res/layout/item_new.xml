<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:theme="@style/Theme.Newsmobile"
    app:cardBackgroundColor="@color/Silver_Lake_Blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageNew"
            android:layout_width="150.dp"
            android:layout_height="150.dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/TituloNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20.sp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/DescripcionNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                />
            <Button
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Ver mÃ¡s"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/Prussian_Blue"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>