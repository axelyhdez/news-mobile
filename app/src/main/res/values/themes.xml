<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Newsmobile" parent="Theme.Material3.Light.NoActionBar">
        <!--Fuente-->
        <item name="android:fontFamily">@font/suse_medium</item>

        <!--Colores-->
        <item name="android:colorBackground">@color/Eggshell</item>
        <!--<item name="android:tint">@color/Rich_Black</item>-->
        <item name="android:textColor">@color/Prussian_Blue</item>

    </style>

    <!--Tema de SplashScreen-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/Rich_Black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Newsmobile</item>
    </style>

    <style name="Theme.Newsmobile" parent="Base.Theme.Newsmobile" />


</resources>